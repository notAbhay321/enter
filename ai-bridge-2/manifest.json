{
  "manifest_version": 3,
  "name": "AI Bridge Extension 2",
  "version": "1.0",
  "description": "A browser extension with Firebase authentication",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://identitytoolkit.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_title": "AI Bridge 2",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 